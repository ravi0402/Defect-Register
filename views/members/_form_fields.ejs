<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Members</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/checkout/">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
    <!-- Custom styles for this template -->
    <link href="/css/member.css" rel="stylesheet">
  </head>
  <body class="bg-light">
    
<div class="container">
  <main>
      </div>
      <div class="col-md-7 col-lg-8 mt-3">
       
          <div class="row g-3">
            <div class="col-6">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= member.name %>" required>
              <div class="invalid-feedback">
                Valid first name is required.
              </div>
            </div>

            <div class="col-6">
              <label for="employee_id" class="form-label">Employee ID </label>
              <input type="text" class="form-control" id="employee_id" placeholder="EMP-XXXX" name="employee_id" value="<%= member.employee_id %>" required>
            </div>

            <div class="col-sm-6">
              <label for="dept" class="form-label">Department</label>
              <select id="dept" class="form-control" name="dept" required>
                <% const deptOptions = ["Electrical Department","Mechanical Department","Operations Department"] %> 
                <% deptOptions.forEach(deptOption =>{ %> 
                    <% if(member.dept == deptOption) { %> 
                  <option selected label="<%= member.dept %>" value="<%= deptOption %>" >
                  <% } else { %> 
                    <option value="<%= deptOption %>"><%= deptOption %></option>
                    <% } %> 
                  <% }) %> 
            </select>
            </div>

            <div class="col-6">
              <label for="designation" class="form-label">Designation</label>
              <input type="text" class="form-control" id="designation" placeholder="Operations Engineer" name="designation" value="<%= member.designation %>" required>
              <div class="invalid-feedback">
                Please enter your designation.
              </div>
            </div>

            <div class="col-6">
              <label for="isVerified" class="form-label">Verified</label>
              <select id="isVerified" class="form-control" name="isVerified" required>
                <% const verifiedOptions = ["True", "False", "Pending"] %> 
                <% verifiedOptions.forEach(option =>{ %> 
                    <% if(member.isVerified == option) { %> 
                  <option selected label="<%= member.isVerified %>" value="<%= option %>" >
                  <% } else { %> 
                    <option value="<%= option %>"><%= option %></option>
                    <% } %> 
                  <% }) %> 
            </select>
            </div>
            </div>
        <hr class="my-4">
        <div>
            <button class="btn btn-primary btn-lg mt-3" type="submit">Save</button>
            <a href="/members" class="btn btn-primary btn-lg mt-3">Cancel</a>
        </div>
      </div>
    </div>
  </main>
</div>


<script src="/js/member.js"></script>
  </body>
</html>
