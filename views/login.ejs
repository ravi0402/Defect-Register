  <%- include('./partials/authheader.ejs') %>
  <title>Login</title> 
  <link href="/css/login.css" rel="stylesheet">
  <body>
    <div class="container w-25">
      <h1 class="text-center mt-2 mb-3 font-weight-normal">Login</h1>
      <%- include('./partials/messages.ejs') %> 
      <form action="/login" method="POST">
  
          <div class="form-group px-0">
              <input type="email" name="email" class="form-control" placeholder="Email Address">
          </div>
  
          <div class="form-group px-0">
              <input type="password" name="password" class="form-control" placeholder="Password">
          </div>
  
          <a class="float-right mt-0 mb-3 text-primary" href="/forgot">Forgot Password?</a>
  
          <button type="submit" class="btn btn-dark btn-block">Login</button>
      </form>
      <p class="text-center my-2 ">OR</p>
      <a href="/signup" class="btn btn-dark btn-block">Sign Up</a>
  </div>
  
  
</body>
</html>
