<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Members</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/checkout/">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
    <!-- Custom styles for this template -->
    <link href="/css/member.css" rel="stylesheet">
  </head>
  <body class="bg-light">
    
<div class="container">
  <main>
      </div>
      <div class="col-md-7 col-lg-8 mt-3"> 
          <div class="row g-3">

            <div class="col-sm-6">
                <label for="createdOn" class="form-label">Created On</label>
                <input type="date" name="createdOn" class="form-control" value="<%= defect.createdOn == null ? '' : defect.createdOn.toISOString().split('T')[0] %>" disabled>
              <div class="invalid-feedback">
                Please enter the person to whon the defect should be assigned to.
              </div>
            </div>

            <div class="col-sm-6" style="pointer-events: none;">
              <label for="observer" class="form-label">Observed By</label>
               <%  if(!defect.observer) defect.observer = currentUser.name %>
              <input style="background-color: #e9ecef;" type="text" class="form-control" id="observer" name="observer" value="<%= defect.observer %>" required>
            </div>

            <div class="col-sm-6">
              <label for="dept_referred_to" class="form-label">Assign this issue to</label>
              <select id="dept_referred_to" class="form-control" name="dept_referred_to" required>
                <% const deptOptions = ["Electrical Department","Mechanical Department","Operations Department"] %> 
                <% deptOptions.forEach(deptOption =>{ %> 
                    <% if(defect.dept_referred_to == deptOption) { %> 
                  <option selected label="<%= defect.dept_referred_to %>" value="<%= deptOption %>" >
                  <% } else { %> 
                    <option value="<%= deptOption %>"><%= deptOption %></option>
                    <% } %> 
                  <% }) %> 
            </select>
              <div class="invalid-feedback">
                Please enter department who might be responsible for this defect.
              </div>
            </div>

            <div class="col-sm-6">
                <label for="priority" class="form-label">Priority</label>
                <select id="priority" class="form-control" name="priority" required>
                <% const priorityOptions = ['High','Medium','Low'] %> 
                <% priorityOptions.forEach(priorityOption =>{ %> 
                    <% if(defect.priority == priorityOption) { %> 
                  <option selected label="<%= defect.priority %>" value="<%= priorityOption %>" >
                  <% } else { %> 
                    <option value="<%= priorityOption %>"><%= priorityOption %> </option>
                    <% } %> 
                <% }) %> 
                </select>
                <div class="invalid-feedback">
                  Valid reported member name is required.
                </div>
              </div>

            <div class="col-sm-6">
              <label for="state" class="form-label">State</label>
              <select id="state" class="form-control" name="state" required>
                <% const stateOptions = ["Reported", "Acknowledged", "Work in progress","Resolved","Canceled"] %> 
                <% stateOptions.forEach(stateOption =>{ %> 
                    <% if(defect.state == stateOption) { %> 
                  <option selected label="<%= defect.state %>" value="<%= stateOption %>" >
                  <% } else { %> 
                    <option value="<%= stateOption %>"><%= stateOption %></option>
                    <% } %> 
                  <% }) %> 
            </select>
            </div>

            <div class="col-sm-6">
              <label for="equipment" class="form-label">Equipment Name</label>
              <input type="text" class="form-control" id="equipment"  name="equipment" value="<%= defect.equipment %>">
              <div class="invalid-feedback">
                Please enter equipment name
              </div>
            </div>
            <div class="col-sm-6">
              <label for="nature" class="form-label">Nature of defect</label>
              <input type="text" class="form-control" id="nature"  name="nature" value="<%= defect.nature %>">
              <div class="invalid-feedback">
                Please enter Nature of defect
              </div>
            </div>
            <div class="col-sm-6">
              <label for="nature" class="form-label">Location</label>
              <input type="text" class="form-control" id="location"  name="location" value="<%= defect.location %>">
              <div class="invalid-feedback">
                Please enter location
              </div>
            </div>
            
            <div class="col-12">
                <label for="title" class="form-label">Title* </label>
                <input type="text" class="form-control"  name="title" value="<%= defect.title %>" required>
                <div class="invalid-feedback">
                  Please enter a title.
            </div>
            
            <div class="col-12">
                <label for="description" class="form-label">Description* </label>
                <textarea name="description" class="form-control" rows="3" required><%= defect.description %></textarea>
            </div>

        <hr class="my-4">
        <div>
            <button class="btn btn-primary btn-lg mt-3" type="submit">Save</button>
            <a href="/defects" class="btn btn-primary btn-lg mt-3">Cancel</a>
        </div>
      </div>
    </div>
  </main>
</div>
<script src="/js/member.js"></script>
  </body>
</html>
