<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Members</title>

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/checkout/">

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
    <!-- Custom styles for this template -->
    <link href="/css/member.css" rel="stylesheet">
  </head>
  <body class="bg-light">
    
<div class="container">
  <main>
      </div>
      <div class="col-md-7 col-lg-8 mt-3">
       
          <div class="row g-3">
            <div class="col-sm-6">
              <label for="number" class="form-label">Number</label>
              <input type="text" class="form-control" id="number" name="number" value="<%= defect.number %>" disabled>
            </div>

            <div class="col-sm-6">
              <label for="member" class="form-label">Assigned To</label>
              <input type="text"  class="form-control" name="member" value="<%= defect.member.name %>" disabled>
            </div>

            <div class="col-sm-6">
                <label for="priority" class="form-label">Priority</label>
                <select disabled id="priority" class="form-control" name="priority">
                <% const priorityOptions = ['1','2','3','4'] %> 
                <% priorityOptions.forEach(priorityOption =>{ %> 
                    <% if(defect.priority == priorityOption) { %> 
                  <option selected label="<%= defect.priority %>" value="<%= priorityOption %>" >
                  <% } else { %> 
                    <option value="<%= priorityOption %>"><%= priorityOption %> </option>
                    <% } %> 
                <% }) %> 
                </select>
              </div>

            <div class="col-sm-6">
                <label for="createdOn" class="form-label">Created On</label>
                <input type="date" name="createdOn" class="form-control"
                    value="<%= defect.createdOn == null ? '' : defect.createdOn.toISOString().split('T')[0] %>" disabled>
            </div>

            <div class="col-sm-6">
              <label for="state" class="form-label">State</label>
              <select id="state" class="form-control" name="state" disabled>
                <% const stateOptions = ["Assigned","Work in progress","Resolved","Canceled"] %> 
                <% stateOptions.forEach(stateOption =>{ %> 
                    <% if(defect.state == stateOption) { %> 
                  <option selected label="<%= defect.state %>" value="<%= stateOption %>" >
                  <% } else { %> 
                    <option value="<%= stateOption %>"><%= stateOption %></option>
                    <% } %> 
                  <% }) %> 
            </select>
            </div>

            <div class="col-sm-6">
              <label for="points" class="form-label">Points<span class="text-muted">(Optional)</span></label>
              <input disabled type="number" class="form-control" id="address"  name="points" value="<%= defect.points %>" min="1" max="8">
            </div>
            <div class="col-sm-6">
              <label for="environment" class="form-label">Environment</label>
              <select disabled id="environment" class="form-control" name="environment" >
                  <% const envOptions = ["Dev","QA","UAT","Prod"] %> 
                  <% envOptions.forEach(envOption =>{ %> 
                    <% if(defect.environment == envOption) { %> 
                    <option selected label="<%= defect.environment %>" value="<%= envOption %>" >
                        <% } else { %> 
                    <option value="<%= envOption %>"><%= envOption %></option>
                            <% } %>   
                    <% }) %> 
                </select>
            </div>
            <div class="col-sm-6">
                <label for="product" class="form-label">Product</label>
                <input disabled type="text" class="form-control" name="product" value="<%= defect.product %>">
            </div>
            
            <div class="col-12">
                <label for="shortDescription" class="form-label">Short Description </label>
                <input disabled type="text" class="form-control"  name="shortDescription" value="<%= defect.shortDescription %>">
            </div>
            
            <div class="col-12">
                <label for="description" class="form-label">Description </label>
                <textarea disabled name="description" class="form-control" rows="3"><%= defect.description %></textarea>
            </div>

        <hr class="my-4">
        <div>
            <a href="/defects/<%= defect.id %>/edit" class="btn btn-primary btn-lg mt-3">Edit</a>
            <form method="POST" action="/defects/<%= defect.id %>?_method=DELETE">
                <button class="btn btn-primary btn-lg mt-3" type="submit">Delete</button>
            </form> 
        </div>
      </div>
    </div>
  </main>
</div>


<script src="/js/member.js"></script>
  </body>
</html>
