<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
  <h1 class="h2">Defects</h1>

  <div class="btn-toolbar mb-2 mb-md-0 form-inline">
      <a href="/defects/new" class="btn btn-outline-info mr-2">New</a>
  </div>

</div>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Number</th>
              <th>Title</th>
              <th>Referred To</th>
              <th>Observed By</th>
              <th>Created At</th>
              <th>Department</th>
              <th>State</th>
            </tr>
          </thead>
          <tbody>
            <% defects.forEach( defect =>{ %> 
              <tr>
                <td><a href="/defects/show/<%= defect.id %>"><%= defect.number %></a></td>
                <td><%= defect.title %></td>
                <td><%= defect.dept_referred_to %></td>
                <td><%= defect.observer %></td>
                <td><%= defect.createdOn.toISOString().split('T')[0] %></td>
                <td><%= defect.dept %></td>
                <td><%= defect.state %></td>
              </tr>
              <% }) %> 
          </tbody>
        </table>
      </div>